/* pages/replenishEventinfor/replenishEventinfor.wxss */
.messageTip{
  width: 93%;
  margin: 20rpx auto 20rpx;
}
.mainbox{
  width: 100%;
  background: #fff;
  height: 80rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
}
.policeType{
  color: #000;
  width: 94%;
  margin: 20rpx auto 0;
}
.policeType radio{
  margin: 0 10rpx 0 0;
  transform:scale(0.8);  
  font-size: 38rpx;

}
.mains{
  width:35%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  float: left;
  text-align: left;
  text-indent: 32rpx;
  color: #000;
}
.mainl{
  width:65%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  float: left;
  text-align: center;
  overflow: hidden;
  display: flex;
  align-items: center;

}
.maininput{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  float: left;
  display: block;
  color: #000;
  text-align: left;
}
.otherText{
  width: 100%;
  background: #fff;
  height: 146rpx;
  overflow: hidden;
}
.otherTextarea{
  width: 92%;
  height: 120rpx;
  margin: 10rpx auto 0;
  border: 1px solid #ccc;
  font-size: 30rpx;
  text-indent: 20rpx;
  color: #000;
}
.picker{
  width: 83%;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
  color: #000;
  text-align: left;
}
.eventDate{
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  border-right: 1px dotted #ccc;
}
.eventTime{
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 20rpx;
}
.eventPlace{
  width: 89%;
  color: #000;
  text-align: left;
}
.timeIcon{
  width: 45rpx;
  height: 32rpx;
  margin-right: 26rpx;
  background:  url('https://www.wxjigntu.top/image/timeIcon.png') no-repeat center center;
  background-size: cover; 
}
.placeIcon{
  width: 22rpx;
  height: 34rpx;
  margin-right: 30rpx;
  background:  url('https://www.wxjigntu.top/image/placeIcon.png') no-repeat center center;
  background-size: cover; 
}
/*mark  */
.mark{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: url('https://www.wxjigntu.top/image/bg.png') no-repeat;
   background-size: 100% 100%;
  z-index:99;
  overflow: hidden;
}
/*受害人联系方式弹框  */
.telOuter{
  width: 540rpx;
  height: 547rpx;
  position: relative;
  left: 13%;
  top: 15%;
  background: url('https://www.wxjigntu.top/image/codeOuter.png') no-repeat;
  background-size: 100% 100%;
}
.telTitle{
  width: 100%;
  height: 170rpx;
  text-align: center;
  font-size: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #3c80e3;
}
.telTitle image{
  width: 53rpx;
  height: 52rpx;
  margin-right: 30rpx;
}

.tel{
  width: 100%;
  text-align: center;
  color: #000;
  font-size: 38rpx;
}
.callBack{
  margin:43rpx 0;
  color: #3c80e3;
}
.telText{
  width: 90%;
  height: 64rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  margin: 20rpx  auto 60rpx ;
  text-align: center;
  color: #000;

}
.close{
  position: absolute;
  left: 45%;
  top:104%;
  width: 40rpx;
  height: 40rpx;
}