/**index.wxss**/
page{
    width: 100%;
  height: 100%;
   background: #fff;
   background-size: 100% 100%;
   color: #fff;
}
/*轮播图  */
.banna{
  width: 100%;
  height: 363rpx;
}
.swiper{
  height: 363rpx;
}
.slide-image{
  width: 100%;
  height: 363rpx;
}
/*我要报警  */
.btnLarge{
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  vertical-align: middle;
  font-size: 36rpx;
  border-radius: 50rpx;
  background: #ff4d50;
  margin: 40rpx auto 0;
}
/*文章  */
.article{
    border-top:1rpx solid #ccc;
    margin-top: 30rpx;
}
.articleCon{
  width: 715rpx;
  height: 15%;
  overflow: hidden;
  padding: 10rpx 0 15rpx;
  margin:10rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #343434;
  border-bottom: 1rpx solid #ccc;
}
.articleL{
  width: 200rpx;
}
.articleR{
  width: 500rpx;
  margin-left: 10rpx;
}
.articleImg{
  width: 197rpx;
  height: 141rpx;
  margin-top:10rpx;
}
.articleDes{
  /* margin-top:15rpx; */
  height: auto;
  overflow: hidden;
  font-size: 24rpx;
  color: #969696;
  letter-spacing: 3rpx;
}
/*提示  */
.tipsOuter{
  width: 650rpx;
  height: 636rpx;
  background: #fff;
  border-radius: 20rpx;
  position: fixed;
  top:20%;
  left: 50%;
  margin-left: -325rpx;
}
.tipsTitle{
  text-align: center;
  margin:47rpx 0 36rpx;
  color: #3c80e3;
}
.tipsCon{
  width: 580rpx;
  font-size: 26rpx;
  margin: 0 auto;
  color: #5e5e5e;
  overflow: hidden;
}
.meslist{
  display: flex;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.tipsnum{
  margin-right: 10rpx;
}
/*选中条款  */
.checkBox{
  display: flex;
  color: #9db9ee;
  font-size: 26rpx;
  bottom:20rpx;
  justify-content: center;
  align-items:center;
  margin:34rpx 0;
}
.check_icon{
  width: 24rpx;
  height: 24rpx;
  float: left;
  margin-right: 20rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}
.surecheck{
     width: 25rpx;
   height: 25rpx;
   background: url('https://www.wxjingtu.top/image/tipChecked.png') no-repeat center center;
  background-size: cover; 
  /* background: red; */
}
.notcheck{
   width: 25rpx;
   height: 25rpx;
   background: url('https://www.wxjingtu.top/image/tipNoccheck.png') no-repeat center center;
   background-size: cover;  
  /* background: green; */
}
.disabled{
  background: #ccc;
}
.able{
  background: #ff3c3d;
}
.tipsBtn{
  width: 534rpx;
  height: 84rpx;
  border-radius: 42rpx;
  color: #fff;
  text-align: center;
  line-height: 84rpx;
  margin: 0 auto;
}
.tipClose{
  width: 44rpx;
  height: 44rpx;
  position: fixed;
  top:80%;
  left: 50%;
  margin-left: -22rpx;
}