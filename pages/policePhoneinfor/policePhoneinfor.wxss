}
.mainOther{
  width: 100%;
  height: 80rpx;
   line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;

}
.inputOther{
   width:100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  display: block;
  text-align: center;
  color: #000;
}
.maininput{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  float: left;
  display: block;
  text-align: left;
}
.tips{
  font-size: 26rpx;
  color: #000;
  text-align: center;
  margin-top:20rpx;
}
.otherText{
  width: 100%;
  background: #fff;
  height: 100rpx;
  overflow: hidden;
}
.otherTextarea{
  width: 92%;
  height: 80rpx;
  margin: 10rpx auto 0;
  border: 1px solid #ccc;
  font-size: 30rpx;
