/*mark  */
.contentmark{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: url('http://www.wxjingtu.top/image/bg.png') no-repeat;
   background-size: 100% 100%;
  z-index:99;
}
/*受害人联系方式弹框  */
.telOuter{
  width: 540rpx;
  height: 547rpx;
  position: absolute;
  left: 13%;
  top: 15%;
  background: url(http://www.wxjingtu.top/image/telOuter.png) no-repeat;
  background-size: 100% 100%;
}
.telOuterTitle{
  width: 100%;
  text-align: center;
  color: #000;
  font-size: 38rpx;
  margin-top:280rpx;
}

.tel{
  width: 100%;
  text-align: center;
  color: #000;
  font-size: 38rpx;
  margin-top:300rpx;
}

.telText{
  width: 90%;
  height: 64rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  margin: 20rpx  auto 60rpx ;
  text-align: center;
  color: #000;

}
.close{
  position: absolute;
  left: 45%;
