  width: 100%;
  background: #fff;
  height: 76rpx;
  border-bottom: 1px solid #ccc;
  position: relative;
}

.mains{
  width:40%;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 35rpx;
  float: left;
  text-align: left;
  text-indent: 32rpx;
  color: #000;
